<?xml version="1.0" encoding="UTF-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
    <solid android:color="#363636" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="@dimen/img_btn_padding" />

    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:left="@dimen/img_btn_padding"
        android:top="@dimen/img_btn_padding"
        android:right="@dimen/img_btn_padding"
        android:bottom="@dimen/img_btn_padding"/>
</shape> 