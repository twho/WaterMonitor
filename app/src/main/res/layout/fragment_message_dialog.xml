<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/fragment_message_inbox_dialog_title"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/title_size"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_heighth"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/img_heighth"
            android:layout_height="@dimen/img_heighth"
            android:id="@+id/fragment_message_inbox_dialog_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingTop="5dp"
                android:text="Large Text"
                android:id="@+id/fragment_message_inbox_dialog_sender" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/fragment_message_inbox_dialog_tv1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/fragment_message_inbox_dialog_tv2" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/mail_height"
        android:padding="10dp"
        android:text="New Text"
        android:textSize="@dimen/text_size"
        android:id="@+id/fragment_message_inbox_dialog_container"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/message_fragment_dialog_iB1"
            android:src="@mipmap/btn_back"
            android:layout_weight="1"
            android:background="@drawable/btn_click"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/message_fragment_dialog_iB2"
            android:src="@mipmap/btn_delete"
            android:layout_weight="1"
            android:background="@drawable/btn_click"/>

    </LinearLayout>

</LinearLayout>